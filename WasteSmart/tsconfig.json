{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2023"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"],
    "outDir": "dist"
  },
  "include": ["scripts", "test", "hardhat.config.ts", "hardhat.d.ts"]
}

